# Environment Variables Template
# Copy this to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# Database (Current Environment)
DATABASE_URL="your_current_database_url_here"

# Migration URLs (SECURE - DO NOT COMMIT)
DEV_DATABASE_URL="your_neon_development_branch_url"
PROD_DATABASE_URL="your_neon_production_branch_url"

# Legacy/Backup URLs (for migration purposes only)
OLD_DATABASE_URL="your_old_database_url"
SUPABASE_DATABASE_URL="your_supabase_url_if_migrating"

# Supabase (if using for other services)
SUPABASE_URL="your_supabase_project_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_KEY="your_supabase_service_key"

# Email Configuration (Resend)
RESEND_API_KEY="your_resend_api_key"
NEXT_PUBLIC_CONTACT_EMAIL="your_contact_email"

# Resend Email Addresses
RESEND_FROM_EMAIL="your_from_email"
RESEND_NOREPLY_EMAIL="your_noreply_email"

# Application
NEXT_PUBLIC_APP_URL="your_app_url"

# NextAuth Configuration (KEEP SECRET - DO NOT COMMIT)
NEXTAUTH_SECRET="generate_with: openssl rand -base64 32"

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token"

# Admin Configuration
ADMIN_PASSWORD="your_secure_admin_password"
ADMIN_EMAIL="your_admin_email"
ADMIN_NAME="Your Admin Name"
